{
  "name": "maxsmart2-adapter",
  "display_name": "Max Hauri maxSMART 2.0",
  "version": "0.0.3",
  "description": "Control Max Hauri Max Smart 2.0 smart plugs. Does not support automatic pairing.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "licenses": "./gather-licenses.js",
    "build": "./build.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freaktechnik/maxsmart2-adapter.git"
  },
  "keywords": [
    "iot",
    "mozilla-iot",
    "max",
    "hauri",
    "smart"
  ],
  "author": "Martin Giger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/freaktechnik/maxsmart2-adapter/issues"
  },
  "homepage": "https://github.com/freaktechnik/maxsmart2-adapter#readme",
  "dependencies": {
    "mh-maxsmart2": "^1.3.0"
  },
  "devDependencies": {
    "nlf": "^2.1.1"
  },
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "devices": [],
      "pairing": true,
      "wifiInfo": {
        "ssid": "",
        "password": ""
      }
    },
    "schema": {
      "type": "object",
      "required": [
        "devices",
        "wifiInfo"
      ],
      "properties": {
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "sn",
              "ip"
            ],
            "properties": {
              "sn": {
                "type": "string",
                "description": "Serial number",
                "pattern": "^[A-Z]{3}[0-9]+$"
              },
              "ip": {
                "type": "string",
                "description": "IPv4 address",
                "pattern": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$"
              }
            }
          }
        },
        "pairing": {
          "type": "boolean",
          "title": "Enable WiFi pairing for plugs"
        },
        "wifiInfo": {
          "type": "object",
          "title": "WiFi configuration",
          "description": "WiFi config sent to unpaired smart plugs. Readable to anyone, so only enable pairing when needed.",
          "required": [
            "ssid",
            "password"
          ],
          "properties": {
            "ssid": {
              "type": "string",
              "description": "WiFi SSID"
            },
            "password": {
              "type": "string",
              "description": "WiFi password"
            }
          }
        }
      }
    }
  },
  "files": [
    "index.js",
    "SHA256SUMS",
    "LICENSE"
  ]
}
